{{> member/include/header}}
{{> member/include/message}}
<body class="bg-gradient-primary">
<div class="card o-hidden border-0 shadow-lg my-5" style="width:60%; margin-left:auto; margin-right:auto">
	<div class="card-body">
		<div class="p-5">
			<div class="text-center">
				<h1 class="h4 mb-4">로그인</h1>
			</div>
			<form class="user" id="form" method="POST" action="/login">
				<div class="form-group">
					<input type="email" class="form-control form-control-user" name="username" id="email" aria-describedby="emailHelp" placeholder="Email">
				</div>
				<div class="form-group">
					<input type="password" class="form-control form-control-user" name="password" id="password" placeholder="비밀번호">
				</div>
				<a href="#" class="btn btn-primary btn-user btn-block" id="btn-login">
				로그인 
				</a>
			</form>
			{{#errorMsg}}
			<div class="font-size-small font-bold" style="margin-top:10px; padding-left:10px;"><font color=red>{{.}}</font></div>
			{{/errorMsg}}
			<hr>
			<div class="text-center">
				<a class="small" href="/member/register">Create an Account!</a>
			</div>
		</div>
	</div>
</div>
 {{> member/include/footer}}
</body>
</html>