			<col width="45%">
			<col width="20%">
			<col width="10%">
			<col width="25%">
			</colgroup>
			</table>
		</div>
		<!-- 댓글의 답글 -->
		<input type="hidden" name="reply_no" id="reply_no" value=""/>
