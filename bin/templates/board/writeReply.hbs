						<tr>
							<td width="85%">
								<textarea class="form-control" id="reply_contents" style="width:98%; height:100px; resize:none;"></textarea>
							</td>
							<td width="15%">
								<a href="#" class="btn btn-warning btn-icon-split" id="btn-reply-mod">
								<span class="text" style="height:95px; line-height:88px;">수정</span>
								</a>
							</td>
						</tr>
						</table>
					</div>
				</div>
			</div>
		</div>
