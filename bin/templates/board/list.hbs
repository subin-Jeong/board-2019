{{> board/include/top}}
<body id="page-top">
<!-- Page Wrapper -->
<div id="wrapper">
	<!-- Content Wrapper -->
	<div id="content-wrapper" class="d-flex flex-column">
		<!-- Main Content -->
		<div id="content">
			 {{> board/include/header}} 
			<!-- Begin Page Content -->
			<div class="container-fluid">
				<!-- DataTales Example -->
				<div class="card shadow mb-4">
					<div class="card-header py-3">
						<h6 class="m-0 font-weight-bold text-primary">
						<div style="float:right;">
							<a href="/board/write" class="btn btn-primary btn-icon-split">
							<span class="text">글등록</span>
							</a>
						</div>
						</h6>
					</div>
					<div class="card-body">
						<input type="hidden" name="pageNum" id="pageNum" value="0">
						<table width="100%" cellspacing="0" style="margin-bottom: 10px;" class="search-area">
						<tr>
							<td width="60%">
								<select name="search_type" id="pageSize" class="custom-select-sm select-search">
									<option value="100" selected>100</option>
									<option value="10">10</option>
									<option value="25">25</option>
									<option value="50">50</option>
								</select> 
								<b>개씩 보기</b>
							</td>
							<td align="right">
								<table width="75%" cellspacing="0" cellpadding="2">
								<tr>
									<td>
										<select name="search_type" id="searchType" class="custom-select custom-select-sm select-search">
											<option value="">선택</option>
											<option value="no">번호</option>
											<option value="title">제목</option>
											<option value="content">내용</option>
											<option value="writer">작성자</option>
										</select>
									</td>
									<td align="right">
										<input type="text" id="searchString" class="form-control input-search" placeholder="" size="19">
									</td>
								</tr>
								</table>
							</td>
							</table>
							<table class="table table-bordered hover" width="100%" cellspacing="0" style="table-layout:fixed;">
							<thead>
							<tr bgcolor="#F8F9FC" style="">
								<th width="10%">
									 번호
								</th>
								<th width="50%">
									 제목
								</th>
								<th width="15%">
									 등록일자
								</th>
								<th width="15%">
									 작성자
								</th>
							</tr>
							</thead>
							<tbody id="boardList">
							</tbody>
							</table>
							<table width="100%" cellspacing="0" cellpadding="0">
							<tr>
								<td id="boardListPaginationInfo" style="vertical-align:top">
								</td>
								<td>
									<div id="boardListPagination" style="float:right">
									</div>
								</td>
							</tr>
							</table>
						</div>
					</div>
				</div>
				<!-- /.container-fluid -->
			</div>
			<!-- End of Main Content -->
			 {{> board/include/footer}}
		</div>
		<!-- End of Content Wrapper -->
	</div>
</div>
<!-- End of Page Wrapper -->
 {{> board/include/scroll}}
</body>